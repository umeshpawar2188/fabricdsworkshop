{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "metadata": {
        "_generator": {
            "name": "bicep",
            "version": "0.9.1.41621",
            "templateHash": "2803229554544767325"
        }
    },
    "parameters": {
        "name": {
            "type": "string",
            "defaultValue": "[concat('oai4bootcamp', take(newGuid(),5))]"
        },
        "fabricCapacitySku": {
            "type": "string",
            "defaultValue": "F64",
            "allowedValues": [
                "F2",
                "F4",
                "F8",
                "F16",
                "F32",
                "F64",
                "F128",
                "F256",
                "F512",
                "F1024",
                "F2048"
            ],
            "metadata": {
                "description": "The SKU for the fabric capacity."
            }}
            ,
            "admin_email_id": {
                "type": "string",
                "metadata": {
                    "description": "Email id of the admin user, this email id whould exist in the AAD tenant"
                }
            },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        }
    },
    "variables": {

    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-04-01",
            "name": "[concat(parameters('name'), 'adls')]",
            "location": "[parameters('location')]",
            "kind": "StorageV2",
            "sku": {
                "name": "Standard_LRS"
            },
            "properties": {
                "isHnsEnabled": true,
                "minimumTlsVersion": "TLS1_2",
                "allowBlobPublicAccess": false,
                "supportsHttpsTrafficOnly": true
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
            "apiVersion": "2021-04-01",
            "name": "[concat(parameters('name'), 'adls/default/sampledata')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', concat(parameters('name'), 'adls'))]"
            ],
            "properties": {
                "publicAccess": "None"
            }
        },
        {
            "type": "Microsoft.Fabric/capacities",
            "apiVersion": "2022-07-01-preview",
            "name": "[parameters('name')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('fabricCapacitySku')]",
                "tier": "Fabric"
            },
            "properties": {
                "administration": {
                    "members": [
                        "[parameters('admin_email_id')]"
                    ]
                }
            }

        }
    ]
}
